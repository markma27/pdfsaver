[Unit]
Description=PDFsaver OCR Worker
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/opt/pdfsaver/ocr-worker
Environment="PATH=/opt/pdfsaver/ocr-worker/venv/bin"
ExecStart=/opt/pdfsaver/ocr-worker/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8123
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

